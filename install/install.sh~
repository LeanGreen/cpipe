#Note: must be called from the install directory (cpipe/install)
ROOT=$(dirname $(pwd))

function join() {
    local IFS=$1
    shift
    echo "$*"
}

function compile {
# $1 is the directory to compile in
    pushd $1

    if [[ -f  configure.ac ]]; then
        autoconf
    fi
    if [[ -f configure ]]; then
        ./configure
    fi
    if [[ -f Configure ]]; then
        ./Configure -d
    fi
    if [[ -f Makefile ]]; then
        make
    fi

    popd
}

echo `pwd`

for DIRECTORY in ../tools/*/; do
    compile $DIRECTORY
done

export PATH=`join ':' $ROOT/tools/*/`:$ROOT/tools/bedtools2/bin/:$PATH
